{
  "policies": [
    {
      "vhost": "/",
      "name": "user-queues-auto-expire",
      "pattern": "^translations-user.*",
      "apply-to": "queues",
      "definition": {
        "expires": 3600000
      },
      "priority": 0
    },
    {
      "vhost": "/",
      "name": "bm-quorum-queues",
      "pattern": "^bm\\.",
      "apply-to": "queues",
      "definition": {
        "x-queue-type": "quorum",
        "x-delivery-limit": 3
      },
      "priority": 10
    }
  ]
}
